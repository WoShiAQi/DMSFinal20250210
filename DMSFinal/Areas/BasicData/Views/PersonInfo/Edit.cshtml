@model DMSFinal.BasicData.ViewModels.PersonInfoVMs.PersonInfoVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Two">

        @if (@Model.LoginUserInfo.Roles[0].RoleCode == "001")
        {
            <wt:display field="Entity.JobNo" />
            <wt:display field="Entity.Name" />
            <wt:display field="Entity.PersonID" />
            <wt:display field="Entity.PoliticalID" />
            <wt:combobox field="SelectedTitleNamesIDs" items="AllTitleNamess" disabled="true" />
            <wt:display field="Entity.Diplomas" />
            <wt:display field="Entity.Degree" />
            <wt:display field="Entity.GraduateTime" />
            <wt:display field="Entity.InWorkTime" />
            <wt:display field="Entity.PartTimeJob" />
            <wt:display field="Entity.IfDoubleTeacher" />
            <wt:display field="Entity.IfDisciplineLeader" />
            <wt:display field="Entity.Discipline" />
            <wt:multiupload field="Entity.PEvidence" upload-type="AllFiles" disabled="true" />
            <wt:multiupload field="Entity.DeEvidence" upload-type="AllFiles" disabled="true" />
            <wt:multiupload field="Entity.TEvidence" upload-type="AllFiles" disabled="true" />
            <wt:multiupload field="Entity.TeaEvidence" upload-type="AllFiles" disabled="true" />
            <wt:multiupload field="Entity.SEvidence" upload-type="AllFiles" disabled="true" />
            <wt:combobox field="Entity.Examine" />
            <wt:textbox field="Entity.Reason" /> 
        }
        else
        {
            <wt:textbox field="Entity.JobNo" />
            <wt:textbox field="Entity.Name" />
            <wt:textbox field="Entity.PersonID" />
            <wt:combobox field="Entity.PoliticalID" />
            <wt:checkbox field="SelectedTitleNamesIDs" items="AllTitleNamess" />
            <wt:combobox field="Entity.Diplomas" />
            <wt:combobox field="Entity.Degree" />
            <wt:datetime field="Entity.GraduateTime" />
            <wt:datetime field="Entity.InWorkTime" />
            <wt:textbox field="Entity.PartTimeJob" />
            <wt:combobox field="Entity.IfDoubleTeacher" />
            <wt:combobox field="Entity.IfDisciplineLeader" />
            <wt:textbox field="Entity.Discipline" />
            <wt:multiupload field="Entity.PEvidence" upload-type="AllFiles" show-preview="true" />
            <wt:multiupload field="Entity.DeEvidence" upload-type="AllFiles" show-preview="true" />
            <wt:multiupload field="Entity.TEvidence" upload-type="AllFiles" show-preview="true" />
            <wt:multiupload field="Entity.TeaEvidence" upload-type="AllFiles" show-preview="true" />
            <wt:multiupload field="Entity.SEvidence" upload-type="AllFiles" show-preview="true" />
        }

    </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
