@model DMSFinal.BasicData.ViewModels.PublicationsVMs.PublicationsVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
	<wt:quote>@Localizer["Sys.DeleteConfirm"]</wt:quote>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:display field="Entity.Department" />
<wt:display field="Entity.Name" />
<wt:display field="Entity.Title1" />
<wt:display field="Entity.Title2" />
<wt:display field="Entity.PublicationForm" />
<wt:display field="Entity.PublicationName" />
<wt:display field="Entity.Press" />
<wt:display field="Entity.PublicationTime" />
<wt:display field="Entity.WriteWordCount" />
<wt:display field="Entity.BookNo" />
<wt:display field="Entity.Rank" />
<wt:display field="Entity.IsOurSchool" />
<wt:display field="Entity.JobNo" />
<wt:display field="Entity.Examine" />
<wt:display field="Entity.Reason" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="@Localizer["Sys.Delete"]"/>
        <wt:closebutton />
    </wt:row>
</wt:form>
